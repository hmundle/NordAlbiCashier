@model Invoice

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Id)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Id)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Type)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Type)
    </dd>
    <dt class="col-sm-2">
        Gesamtpreis
    </dt>
    <dd class="col-sm-10">
        @Model.Sellings.Sum(s => s.FinalPrice).ToString("C2")
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Created)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Created)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Modified)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Modified)
    </dd>
</dl>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameForInnerType((Selling s) => s.FinalPrice)</th>
            <th>@Html.DisplayNameForInnerType((Product p) => p.Name)</th>
            <th>@Html.DisplayNameForInnerType((Product p) => p.BarCode)</th>
            <th>@Html.DisplayNameForInnerType((Product p) => p.Category)</th>
            <th>@Html.DisplayNameForInnerType((Product p) => p.Price)</th>
            <th>@Html.DisplayNameForInnerType((Product p) => p.PriceReduced)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Sellings)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@item.FinalPrice.ToString("C2")</td>
                <td>@Html.DisplayFor(modelItem => item.ProductNavigation!.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.ProductNavigation!.BarCode)</td>
                <td>@Html.DisplayFor(modelItem => item.ProductNavigation!.Category)</td>
                <td>@item.ProductNavigation!.Price.ToString("C2")</td>
                <td>@Html.DisplayFor(modelItem => item.ProductNavigation!.PriceReduced)</td>
            </tr>
        }
    </tbody>
</table>
