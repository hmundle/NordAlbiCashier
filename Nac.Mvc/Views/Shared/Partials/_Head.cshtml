<!-- Partials/_Head -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>@ViewData["Title"] - Ppas.Mvc</title>

<environment include="Development">
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" asp-append-version="true" />
</environment>
<environment exclude="Development">
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
</environment>
@{
    if (ViewData["UseDatatables"] as bool? == true)
    {
        <environment include="Development">
            <link rel="stylesheet" href="~/lib/datatables.net-bs5/css/dataTables.bootstrap5.css" asp-append-version="true" />
            <link rel="stylesheet" href="~/lib/datatables.net-searchpanes-bs5/css/searchPanes.bootstrap5.css" asp-append-version="true" />
            <link rel="stylesheet" href="~/lib/datatables.net-select-bs5/css/select.bootstrap5.css" asp-append-version="true" />
            <link rel="stylesheet" href="~/lib/datatables.net-buttons-bs5/css/buttons.bootstrap5.css" asp-append-version="true" />
            <link rel="stylesheet" href="~/lib/datatables.net-datetime/dist/dataTables.dateTime.css" asp-append-version="true" />
            <link rel="stylesheet" href="~/lib/datatables.net-searchbuilder-bs5/css/searchBuilder.bootstrap5.css" asp-append-version="true" />
        </environment>
        <environment exclude="Development">
            <link rel="stylesheet" href="~/lib/datatables.net-bs5/css/dataTables.bootstrap5.min.css" asp-append-version="true" />
            <link rel="stylesheet" href="~/lib/datatables.net-searchpanes-bs5/css/searchPanes.bootstrap5.min.css" asp-append-version="true" />
            <link rel="stylesheet" href="~/lib/datatables.net-select-bs5/css/select.bootstrap5.min.css" asp-append-version="true" />
            <link rel="stylesheet" href="~/lib/datatables.net-buttons-bs5/css/buttons.bootstrap5.min.css" asp-append-version="true" />
            <link rel="stylesheet" href="~/lib/datatables.net-datetime/dist/dataTables.dateTime.min.css" asp-append-version="true" />
            <link rel="stylesheet" href="~/lib/datatables.net-searchbuilder-bs5/css/searchBuilder.bootstrap5.min.css" asp-append-version="true" />
        </environment>
    }
}
<link rel="stylesheet" href="~/lib/font-awesome/css/all.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/Ppas.Mvc.styles.css" asp-append-version="true" />
