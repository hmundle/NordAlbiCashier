            <div class="card-body py-1">

                <dl class="row mb-0">
                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.Id)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.Id) &nbsp;
                    </dd>

                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.Category)
                    </dt>
                    <dd class="col-sm-7">
                         @Html.DisplayFor(model => model.Category)
                    </dd>

                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.BarCode)
                    </dt>
                    <dd class="col-sm-7">
                         @Html.DisplayFor(model => model.BarCode)
                    </dd>

                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class="col-sm-7">
                         @Html.DisplayFor(model => model.Name)
                    </dd>

                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.Price)
                    </dt>
                    <dd class="col-sm-7">
                         @Html.DisplayFor(model => model.Price)
                    </dd>

                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.PriceReduced)
                    </dt>
                    <dd class="col-sm-7">
                         @Html.DisplayFor(model => model.PriceReduced)
                    </dd>

                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.IsSychronized)
                    </dt>
                    <dd class="col-sm-7">
                         @Html.DisplayFor(model => model.IsSychronized)
                    </dd>

                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.Created)
                    </dt>
                    <dd class="col-sm-7">
                        @Html.DisplayFor(model => model.Created) &nbsp;
                    </dd>

                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.Modified)
                    </dt>
                    <dd class="col-sm-7">
                         @Html.DisplayFor(model => model.Modified)
                    </dd>

                </dl>

            </div>
        </div>

    </div>
</div>
