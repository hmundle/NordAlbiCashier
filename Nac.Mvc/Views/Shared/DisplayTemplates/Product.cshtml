@model Nac.Models.Entities.Product

<div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 row-cols-xxl-5 g-1 mb-2">
    <div class="col">

        <div class="card h-100 mb-1">
